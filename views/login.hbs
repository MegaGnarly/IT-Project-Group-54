<body class="upload_fish"></body>
        <div class="upload_fish_form" style="display: flex; justify-items: center">
            {{#each flash}}
            <p class="alert" style="text-align: center">{{this}}</p>
            {{/each}}
            <h1 style="text-align: center"> User Login</h1>

            <!-- Login Form -->
            <form action="login" method="POST">
                <div class="general-form">

                        <label for="username"><b>Username:</b></label>
                        <input type="username" id="username" name="username" placeholder="Username" required/>

                        <label for="password"><b>Password:</b></label>
                        <input type="password" id="password" name="password" placeholder="Password" required/>

                </div>

                <div class="checkbox">
                    <input type="checkbox" onclick="myPassword()">Show Password
                </div>
                <script>
                    function myPassword() {
                        var x = document.getElementById("password");
                        if (x.type === "password") {
                            x.type = "text";
                        } else {
                            x.type = "password";
                        }
                    }
                </script>
                <div class="login-button">
                    <button class="viewfish_button blue1" type="submit" value="Login">Sign in</button>
                </div>
            </form>

            <p style="text-align:center">Not a user? Sign up today!</p>
            
            <!-- Link to register new user -->
            <div class="login-button">
                <a href="/sign_up"><button class="viewfish_button blue1" style= "width:100% ">Sign up</button></a>
            </div>
        </div>
</body>