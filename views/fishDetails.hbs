<body>
    <h1 class="upload_fish_title">Catch Details</h1>
    <div>
        {{#each images}}
        
            <div class="fish-flexbox blue1">
                <img src="data:image/png;base64,{{this.img.data}}">
                <div>
                    <h5>Angler: {{this.angler}}</h5>
                    <p>Upload Time: {{this.displayTime}}</p>
                    <p>Species: {{this.species}}</p>
                    <p>Size: {{this.size}}cm</p>
                    <p>Weight: {{this.weight}}g</p>
                </div>
            </div>
        {{/each}}
            <hr>
            {{#if user}}
                {{#each images}}
                <form action="" method="POST">
                    <h5>Feel uncomfy with it? Update it!</h5>
                    <div>
                        <label for="name">Species</label>
                        <input type="text" id="name" placeholder="Name" value="{{this.species}}" name="name" required>
                    </div>
                    <div>
                        <label for="desc">Size (in cm): </label>
                        <input type="number" id="size" placeholder="Size" value="{{this.size}}" name="size">
                    </div>
                    <div>
                        <label for="info">Weight (in kg): </label>
                        <input type="number" id="weight" placeholder="Weight" value="{{this.weight}}" name="weight">
                    </div>
                    <button class = nav type="submit" onclick = alert("updating")>Update</button>
                </form>
                <a href = "/delete/{{this._id}}"><button class = nav type="button">Delete</button></a>
                {{/each}}
            {{/if}}
        

    </div>
</body>