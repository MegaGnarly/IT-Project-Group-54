<div>
    <form action="/search" method="POST">
        <h1 class="upload_fish_title"><label class="upload_fish_section" for="name">Search by Species:</label></h1>
        <input class="upload_fish_input" type="text" id="name" placeholder="Name" value="" name="name" required>
        <button class="upload_fish_submit blue2" type="submit">Search</button>
    </form>
</div>

<hr>

<body>
    <h1 class="upload_fish_title">Result:</h1>
    <div>
        {{#each fishes}}
        <div class="fish-flexbox blue1">
            <img class="fish_image" src="data:image/png;base64,{{this.img.data}}">
            <div class="fish_details_flexbox">
                <p class="fish_details blue3">Date: {{this.displayDate}}</p>
                <p class="fish_details blue3">Species: {{this.species}}</p>
                <p class="fish_details blue3">Size: {{this.size}}cm</p>
                <p class="fish_details blue3">Weight: {{this.weight}}g</p>
            </div>
        </div>
        {{/each}}
    </div>
</body>