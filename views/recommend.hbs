<body>
    <div>
        <form action="/suges" method="POST">

            <h1 class="upload_fish_title"><label class="upload_fish_section" for="name">Search species:</label></h1>
            <input class="upload_fish_input" type="text" id="name" placeholder="Name" value="" name="name">
            <button class="upload_fish_submit blue2" type="submit">Search</button>

        </form>
    </div>

<hr>

        {{#each recommend}}
        <div>
            <h1 class="upload_fish_title">{{this.loc}} would be a nice place to catch some {{this.spe}}. There are {{this.num}} catchs recorded.</h1>
        </div>
        <button class="blue2" onclick=window.open("https://www.google.com.au/maps/search/{{this.loc}}")>Let's Go!</button>
        {{/each}}
    </div>
</body>